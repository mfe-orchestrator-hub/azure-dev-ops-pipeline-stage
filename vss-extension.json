{
  "manifestVersion": 1,
  "id": "microfrontend-upload-extension",
  "version": "1.0.0",
  "name": "Microfrontend Upload",
  "description": "Azure DevOps extension for uploading microfrontend bundles",
  "publisher": "your-publisher-id",
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "categories": [
    "Azure Pipelines"
  ],
  "icons": {
    "default": "images/extension-icon.png"
  },
  "files": [
    {
      "path": "dist",
      "addressable": true
    },
    {
      "path": "task.json",
      "addressable": true
    },
    {
      "path": "images",
      "addressable": true,
      "packagePath": "images"
    }
  ],
  "contributions": [
    {
      "id": "microfrontend-upload",
      "type": "ms.vss-distributed-task.task",
      "targets": [
        "ms.vss-distributed-task.tasks"
      ],
      "properties": {
        "name": "dist"
      }
    }
  ]
}
